#include<stdio.h>

int visitantes;

int main() {

	printf("Esse é o sistema de controle de visitantes da recepção!\n"); // Exibe uma mensagem para o recepcionista

	printf("Por favor, insira o número de visitantes de hoje: "); // Solicita o número de visitantes

	scanf("%d", &visitantes);

	printf("Número de visitantes registrados hoje: %d\n ", visitantes); // Exibir uma mensagem de confirmação

	printf("Obrigado! Tenha um ótimo descanso.");

	return 0;
}
